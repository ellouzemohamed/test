{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-6">
            <h3>Liste des articles</h3>
        </div>
        <div class="col-lg-6 text-end">
            <a href="{{ path('article_new') }}" class="btn btn-primary pull">Ajouter</a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Aimes</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.id }}</td>
                        <td>{{ article.titre }}</td>
                        <td>{{ article.aimes }}</td>
                        <td>
                            <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary"><span class="fa fa-edit"></span></a>
                            <a href="{{ path('article_supprimer', {'id': article.id}) }}" onclick="return confirm('Voulez-vous vraiment supprimer cete article?');" class="btn btn-danger"><span class="fa fa-trash-alt"></span></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucune articles disponibles</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
